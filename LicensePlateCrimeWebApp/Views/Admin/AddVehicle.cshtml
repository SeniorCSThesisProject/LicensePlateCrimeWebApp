@model LicensePlateCrimeWebApp.ViewModels.CreateVehicleViewModel
@{
    ViewData["Title"] = "Admin Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .switch.switch-default .switch-label {
        background-color: gray !important;
    }
</style>

<div class="container">
    <div class="row justify-content-lg-center">
        <div class="col col-lg-2"></div>

        <div class="col-md-auto">
            <div class="card">
                <div class="card-header">Araç Ekle</div>
                <div class="card-body card-block">
                    <form method="POST" asp-controller="Admin" asp-action="AddVehicle" enctype="multipart/form-data">
                        <input type="hidden" id="OwnerId" name="OwnerId" asp-for="OwnerId" />
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">Model</div>
                                <input asp-for="Model" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">Plaka</div>
                                <input asp-for="LicensePlate" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">Resim</div>
                                <input asp-for="Image" type="file" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">Aranma Durumu</div>
                                <div class="input-group-addon" style="text-align:center">
                                    <label class="switch switch-default switch-pill switch-danger mr-2">
                                        <input asp-for="IsWanted" type="checkbox" class="switch-input" checked="false">
                                        <span class="switch-label"></span>
                                        <span class="switch-handle"></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions form-group">
                            <button type="submit" class="btn btn-primary btn-sm">Kaydet</button>
                        </div>


                    </form>
                </div>
            </div>
        </div>
        <div class="col col-lg-2"></div>
    </div>
</div>
