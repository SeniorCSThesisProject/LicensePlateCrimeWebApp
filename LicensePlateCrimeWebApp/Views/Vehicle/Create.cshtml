@model LicensePlateCrimeWebApp.ViewModels.CreateVehicleViewModel

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2>Create Vehicle</h2>
        <form method="POST" asp-action="Create" enctype="multipart/form-data">
            <input type="hidden" id="OwnerId" name="OwnerId" asp-for="OwnerId" />
            <div class="form-group">
                <label>Model</label>
                <input asp-for="Model" type="text" class="form-control">
            </div>
            <div class="form-group">
                <label>License Plate</label>
                <input asp-for="LicensePlate" type="text" class="form-control">
            </div>
            <div class="form-group">
                <label>Image</label>
                <input asp-for="Image" type="file" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>