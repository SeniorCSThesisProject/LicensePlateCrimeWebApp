@model IEnumerable<Vehicle>

<!-- special-services -->
<div class="special-services">
    <div class="container">
        <h3>Vehicles</h3>
        <p class="quia">owned by you</p>
        <div class="wthree_special_services">

            @if (Model.Count() == 0)
            {
                <h1>No vehicles found</h1>
            }
            else
            {
                @foreach (var vehicle in Model)
                {
                    <div class="col-md-4 wthree_special_service_left">
                        <a asp-action="Detail">
                            <img src=@vehicle.ImageUrl alt=" " class="" />
                        </a>
                        <h4>@vehicle.Model (@vehicle.LicensePlate)</h4>
                        <div class="row">
                            <div class="wthree_more wthree_more2 col-md-6">
                                <a id="vehicle-view-button" asp-action="Detail" class="button--wayra button--border-thick button--text-upper button--size-s">
                                    <i class="glyphicon glyphicon-eye-open" aria-hidden="true"></i>
                                    Details
                                </a>
                            </div>
                            <div class="wthree_more wthree_more2 col-md-6">
                                <a id="vehicle-delete-button" asp-action="Delete" class="button--wayra button--border-thick button--text-upper button--size-s">
                                    <i class="glyphicon glyphicon-trash" aria-hidden="true"></i>
                                    Delete
                                </a>
                            </div>
                        </div>

                    </div>
                }
            }

            <div class="clearfix"> </div>
        </div>
    </div>
</div>
<!-- //special-services -->

<style>
    img {
        height: 300px;
        object-fit: cover;
        width: 100%;
    }

</style>
