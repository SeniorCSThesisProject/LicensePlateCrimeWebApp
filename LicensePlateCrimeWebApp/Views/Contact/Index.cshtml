					<input asp-for="Name" type="text" class="form-control" value="Ad Soyad">
					<input asp-for="Email" type="text" class="form-control" value="E-Mail">
				</div>
				<div class="col-md-6 wthree_contact_left_grid">
					<input asp-for="Telephone" type="text" class="form-control" value="Telefon">
					<input asp-for="Subject" type="text" class="form-control" value="Konu">
				</div>
				<div class="clearfix"> </div>
				<textarea asp-for="Message" type="text">Mesaj...</textarea>
				<input type="submit" value="Gönder">
				<input type="reset" value="Temizle">
			</form>
		</div>
		<div class="clearfix"> </div>
