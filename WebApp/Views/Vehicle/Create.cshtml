@model LicensePlateCrimeWebApp.ViewModels.CreateVehicleViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    var title = @localizer["Araçlarım - Araç Ekle"];
    ViewData["Title"] = title;
}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2>@localizer["Create Vehicle"]</h2>
        <form method="POST" asp-action="Create" enctype="multipart/form-data">
            <input type="hidden" id="OwnerId" name="OwnerId" asp-for="OwnerId" />
            <div class="form-group">
                <label>@localizer["Model"]</label>
                <input asp-for="Model" type="text" class="form-control">
            </div>
            <div class="form-group">
                <label>@localizer["License Plate"]</label>
                <input asp-for="LicensePlate" type="text" class="form-control">
            </div>
            <div class="form-group">
                <label>@localizer["Image"]</label>
                <input asp-for="Image" type="file" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">@localizer["Submit"]</button>
        </form>
    </div>
</div>