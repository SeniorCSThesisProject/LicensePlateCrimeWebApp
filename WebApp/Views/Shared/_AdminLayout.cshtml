@using static LicensePlateCrimeWebApp.Helpers.GlobalHelpers;


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Plaka Ceza Sistemi</title>

    <!-- Fontfaces CSS-->
    <link href="~/CoolAdmin-master/css/font-face.css" rel="stylesheet" media="all">
    <link href="~/CoolAdmin-master/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <link href="~/CoolAdmin-master/vendor/font-awesome-5/css/fontawesome-all.min.css" rel="stylesheet" media="all">
    <link href="~/CoolAdmin-master/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">

    <!-- Bootstrap CSS-->
    <link href="~/CoolAdmin-master/vendor/bootstrap-4.1/bootstrap.min.css" rel="stylesheet" media="all">

    <!-- Vendor CSS-->
    <link href="~/CoolAdmin-master/vendor/animsition/animsition.min.css" rel="stylesheet" media="all">
    <link href="~/CoolAdmin-master/vendor/bootstrap-progressbar/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet" media="all">
    <link href="~/CoolAdmin-master/vendor/wow/animate.css" rel="stylesheet" media="all">
    <link href="~/CoolAdmin-master/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" media="all">
    <link href="~/CoolAdmin-master/vendor/slick/slick.css" rel="stylesheet" media="all">
    <link href="~/CoolAdmin-master/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/CoolAdmin-master/vendor/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="~/CoolAdmin-master/css/theme.css" rel="stylesheet" media="all">
    <!-- FullCalendar -->
    <link href='~/CoolAdmin-master/vendor/fullcalendar-3.10.0/fullcalendar.css' rel='stylesheet' media="all" />
    <!-- Jquery JS-->
    <script src="~/CoolAdmin-master/vendor/jquery-3.2.1.min.js" asp-append-version="true"></script>


    <script>
        $(document).ready(function () {
            var url = window.location;
            $('.navbar-sidebar .navbar__list').find('.active').removeClass('active');
            $('.navbar-sidebar .navbar__list li a').each(function () {
                if (this.href == url) {
                    $(this).parent().addClass('active');
                }
            });
        });
    </script>
</head>

<body class="animsition">
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        <header class="header-mobile d-block d-lg-none">
            <div class="header-mobile__bar">
                <div class="container-fluid">
                    <div class="header-mobile-inner">
                        <a class="logo" asp-area="" asp-controller="Admin" asp-action="Index">
                            <img src="~/CoolAdmin-master/images/icon/logo3.png" alt="CoolAdmin" />
                        </a>
                        <button class="hamburger hamburger--slider" type="button">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <nav class="navbar-mobile">
                <div class="container-fluid">
                    <ul class="navbar-mobile__list list-unstyled">
                        <li class="has-sub">
                            <a asp-area="" asp-controller="Admin" asp-action="Index">
                                <i class="fas fa-user"></i>Kullanıcılar
                            </a>
                        </li>
                        <li class="has-sub">
                            <a asp-area="" asp-controller="Admin" asp-action="VehicleIndex">
                                <i class="fas fa-address-card"></i>Araçlar
                            </a>
                        </li>
                        <li class="has-sub">
                            <a asp-area="" asp-controller="Admin" asp-action="ViolationIndex">
                                <i class="fas fa-clipboard"></i>İhlaller
                            </a>
                        </li>
                        <li class="has-sub">
                            <a asp-area="" asp-controller="Admin" asp-action="ContactIndex">
                                <i class="fas fa-envelope"></i>İletişim Mesajları
                            </a>
                        </li>
                        <li class="has-sub">
                            <a asp-area="" asp-controller="Admin" asp-action="WantedVehicle">
                                <i class="fas fa-balance-scale"></i>Aranan Araç Takibi
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- END HEADER MOBILE-->
        <!-- MENU SIDEBAR-->
        <aside class="menu-sidebar d-none d-lg-block">
            <div class="logo">
                <a class="logo" asp-area="" asp-controller="Admin" asp-action="Index">
                    <img src="~/CoolAdmin-master/images/icon/logo3.png" alt="Cool Admin" />
                </a>
            </div>
            <div class="menu-sidebar__content js-scrollbar1">
                <nav class="navbar-sidebar">
                    <ul class="list-unstyled navbar__list">
                        <li class="has-sub">
                            <a asp-area="" asp-controller="Admin" asp-action="Index">
                                <i class="fas fa-user"></i>Kullanıcılar
                            </a>
                        </li>
                        <li class="has-sub">
                            <a asp-area="" asp-controller="Admin" asp-action="VehicleIndex">
                                <i class="fas fa-address-card"></i>Araçlar
                            </a>
                        </li>
                        <li class="has-sub">
                            <a asp-area="" asp-controller="Admin" asp-action="ViolationIndex">
                                <i class="fas fa-clipboard"></i>İhlaller
                            </a>
                        </li>
                        <li class="has-sub">
                            <a asp-area="" asp-controller="Admin" asp-action="ContactIndex">
                                <i class="fas fa-envelope"></i>İletişim Mesajları
                            </a>
                        </li>
                        <li class="has-sub">
                            <a asp-area="" asp-controller="Admin" asp-action="WantedVehicle">
                                <i class="fas fa-balance-scale"></i>Aranan Araç Takibi
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <!-- END MENU SIDEBAR-->

        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <header class="header-desktop">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="header-wrap">
                            <form class="form-header" action="" method="POST">
                                
                            </form>
                            <div class="header-button">
                                <div class="account-wrap" style="float: right;">
                                    <div class="account-item clearfix js-item-menu">
                                        <div class="image">
                                            <img src="~/CoolAdmin-master/images/icon/operator.png" alt="John Doe" />
                                        </div>
                                        <div class="content">
                                            <a class="js-acc-btn" >Admin</a>
                                        </div>
                                        <div class="account-dropdown js-dropdown">
                                            <div class="info clearfix">
                                                <div class="image">
                                                    <a >
                                                        <img src="~/CoolAdmin-master/images/icon/operator.png" alt="John Doe" />
                                                    </a>
                                                </div>
                                                <div class="content">
                                                    <h5 class="name">
                                                        <a >Admin</a>
                                                    </h5>
                                                    <span class="email">@GetCurrentUserInfo(Context)?.Email</span>
                                                </div>
                                            </div>
                                            <div class="account-dropdown__footer">
                                                <a asp-area="" asp-controller="Home" asp-action="Index">
                                                    <i class="zmdi zmdi-home"></i>Ana Sayfa
                                                </a>
                                            </div>
                                            <div class="account-dropdown__footer">
                                                <a asp-area="" asp-controller="Login" asp-action="Logout">
                                                    <i class="zmdi zmdi-power"></i>Çıkış Yap
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        @RenderBody()
                        <div class="row">
                            <div class="col-md-12">
                                <div class="copyright">
                                    <p>&copy; 2023 - Plaka Ceza Sistemi,&nbsp; Her Hakkı Saklıdır. &nbsp;&nbsp;<a asp-area="" asp-controller="Home" asp-action="Privacy">Gizlilik Sözleşmesi</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END MAIN CONTENT-->
            
            <!-- END PAGE CONTAINER-->
        </div>

    </div>
    
    <!-- Bootstrap JS-->
    <script src="~/CoolAdmin-master/vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="~/CoolAdmin-master/vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- Vendor JS       -->
    <script src="~/CoolAdmin-master/vendor/slick/slick.min.js">
    </script>
    <script src="~/CoolAdmin-master/vendor/wow/wow.min.js"></script>
    <script src="~/CoolAdmin-master/vendor/animsition/animsition.min.js"></script>
    <script src="~/CoolAdmin-master/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js">
    </script>
    <script src="~/CoolAdmin-master/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="~/CoolAdmin-master/vendor/counter-up/jquery.counterup.min.js">
    </script>
    <script src="~/CoolAdmin-master/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="~/CoolAdmin-master/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/CoolAdmin-master/vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="~/CoolAdmin-master/vendor/select2/select2.min.js">
    </script>
    <!-- full calendar requires moment along jquery which is included above -->
    <script src="~/CoolAdmin-master/vendor/fullcalendar-3.10.0/lib/moment.min.js"></script>
    <script src="~/CoolAdmin-master/vendor/fullcalendar-3.10.0/fullcalendar.js"></script>

    <!-- Main JS-->
    <script src="~/CoolAdmin-master/js/main.js"></script>

</body>

</html>
<!-- end document-->
